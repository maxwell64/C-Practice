//Finds all the prime numbers up to a given value and adds them to a set (WIP)

#include <iostream>
#include <Windows.h>
#include <math.h>
using namespace std;

int maximum;

bool isPrime(int i)
{
	if (i == 2)
	{
		return true;
	}
	else if (i % 2 == 0)
	{
		return false;
	}
	int j;
	for (j = 3; j < int(sqrt(i)); j += 2)
	{
		cout << j;
		if (isPrime(j) == true)
		{
			if (i % j == 0)
			{
				return false;
			}
		}
	}
	return true;
}

int listPrimes(int i)
{
	int j;
	for (j = 2;j < i;j ++)
	{
		if (isPrime(j) == true)
		{
			cout << j;
		}
	}
}

int main()
{
	cout << "Enter the maximum: ";
	cin >> maximum;
	cout << isPrime(maximum);
}
